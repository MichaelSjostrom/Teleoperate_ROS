<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.toyota_forklifts.teleoperate_ros.MainActivity">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@drawable/grey"
        >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:onClick="back"
            android:background="@android:color/black"
            android:src="@drawable/turnoff" />

        <Spinner
            android:id="@+id/view_spinner"
            android:layout_width="95dp"
            android:layout_height="50dip"
            android:background="@drawable/grey"
            android:popupBackground="#f2f2f2"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="60dip"
            android:layout_height="50dip"
            android:background="@android:color/black"
            android:src="@drawable/test3"
            android:layout_gravity="center"/>
"
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@drawable/grey"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="215dp"
            android:layout_gravity="bottom"
            android:background="@drawable/black_background">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:id="@+id/button2"
                android:background="@android:color/black"
                android:rotation="180"
                android:src="@drawable/test"
                android:layout_gravity="center_horizontal|top" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton"
                android:background="@android:color/black"
                android:src="@drawable/test"
                android:rotation="270"
                android:layout_gravity="right|center_vertical" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton2"
                android:background="@android:color/black"
                android:src="@drawable/test"
                android:rotation="90"
                android:layout_gravity="left|center_vertical" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:id="@+id/imageButton3"
                android:background="@android:color/black"
                android:src="@drawable/test"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

        <org.ros.android.view.RosImageView
            android:id="@+id/camera_view"
            android:layout_width="400dp"
            android:layout_height="489dp" />

        <LinearLayout
            android:id="@+id/side_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".75"
            android:gravity="right"
            android:orientation="vertical">

            <org.ros.android.view.visualization.VisualizationView
                android:id="@+id/map_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".25" />

            <org.ros.android.view.VirtualJoystickView
                android:id="@+id/virtual_joystick"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:adjustViewBounds="true"
               />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
